<% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this obj from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
          <section >
            
            <div class="col-xs-2">

                      <h2 class="form-header-title">User info</h2>

                    
                      <!-- ここにform_forを追加します -->
                      <%= form_for(@user) do |f| %>
                      <div class="form-group">
                    
                        <label class="control-label" for="inputEmail">Name</label>
                        <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"名前"%>
                      </div>
                      <div class="form-group">
                        <h4>Image</h4>
                        <div class="user-edit-image">
                          <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "pull-left profile-thumb", fallback: "noimage.png", size:'60x60'%>
                          </div>
                          <label class="control-label sr-only" for="inputEmail">ProfileImage</label>
                          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
                        </div>
                        <div class="form-group">
                        <label class="control-label" for="inputEmail">Introduction</label>
                        <%= f.text_area :introduction, autofocus: true, class:"form-control", id:"inputEmail",rows:"3", placeholder:"introduction"%>
                        </div>
                      <%= f.submit "Update User", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
                      <% end %>
                    </div>

                    <div class="col-xs-8">
                      
                    </div>


          </section>
