
          <section class="slice slice-lg sct-color-1">

                    
                    <div class="form-header text-center">
                      <h2 class="form-header-title">User info</h2>
                    </div>
                    <div class="form-body">
                      <!-- ここにform_forを追加します -->
                      <%= form_for(@user) do |f| %>
                      <div class="form-group has-icon">
                        <h4>Name</h4>
                        <label class="control-label sr-only" for="inputEmail">Name</label>
                        <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"名前"%>
                      </div>
                      <div class="form-group has-icon">
                        <h4>Image</h4>
                        <div class="user-edit-image">
                          <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "noimage.png", size:'60x60'%>
                          </div>
                          <label class="control-label sr-only" for="inputEmail">ProfileImage</label>
                          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
                        </div>
                        <div class="introduction">
                          <h4>Introduction</h4>
                        <label class="control-label sr-only" for="inputEmail">Introduction</label>
                        <%= f.text_area :introduction, autofocus: true, class:"form-control", id:"inputEmail",rows:"3", placeholder:"introduction"%>
                        </div>
                      <%= f.submit "Update User", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
                      <% end %>
                    </div>


          </section>
