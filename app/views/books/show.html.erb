<h1>Books#show</h1>
<p>Find me in app/views/books/show.html.erb</p>
<section>

                  <h3 class="block-title">
                    <%= link_to book_path(@book) do %>
                      	<%= @book.title %>
                    <% end %>
                  </h3>
                  <p><%= @book.body %></p>
                  <ul class="inline-meta">
                    <li><%=attachment_image_tag @book.user,:profile_image%></li>
                    <li>By
                      <%= @book.user.name %>
                    </li>
                    <li>
                      <% if @book.user == current_user %>
                      <%= link_to "削除", books_path(@book), method: :delete %>
                      <% end %>
                    </li>
                    <li>
                    	　<% if @user.id == current_user.id %>
                    	<p><%= link_to "編集", edit_book_path(@book), class: "pull-right" %></p>
                    	<% end %>
                    </li>
                  </ul>
</section>