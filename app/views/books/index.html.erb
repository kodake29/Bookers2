<div class="row">
  <div class="col-xs-3">
<%= render 'books/list', book_new: @book_new, user: @user %>
</div>
<section>
  <div class="col-xs-9">
<h2>Books</h2>
        <table class="table">
          <thead>
            <tr>
           <th></th>
           <th>Title</th>
           <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
            <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user.id) do %>
              <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'png', fallback: "noimage.png", size:'60x60' %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
              <%= link_to book.title ,book_path(book) %>
              <% end %>
            </td>
            <td>
              <%= book.body %>
            </td>
          </tr>
           <% end %>
         </tbody>
      </table>
</section>
</div>