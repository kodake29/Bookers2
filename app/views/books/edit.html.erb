                       <%= form_for(@book) do |f| %>
                        <div class="form-group has-icon">
                          <label class="control-label sr-only" for="inputEmail">Title</label>
                          <%= f.text_field :title, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"title"%>
                          <span class="fa fa-book form-control-icon" aria-hidden="true"></span>
                          <label class="control-label sr-only" for="inputEmail">Opnion</label>
                          <%= f.text_field :body, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"opinion"%>
                          <span class="fa fa-book form-control-icon" aria-hidden="true"></span>
                        </div>

                        <%= f.submit "変更を保存", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
                        <% end %>
                        <%= link_to "Show", book_path(@book) %>
                        <%= link_to "Back", books_path %>