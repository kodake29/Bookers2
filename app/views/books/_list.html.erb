<div class="profile-container">
  <%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'png', class: "img-circle pull-left profile-img", fallback: "noimage.png", size:'60x60' %>
  <h3 class="profile-name"><%= user.name %></h3>
  <% if user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(current_user.id), class: "pull-right" %></p>
  <% end %>
</div>
